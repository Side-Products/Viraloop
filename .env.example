# Viraloop Environment Variables

# App
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret

# Database
MONGODB_URI=mongodb://localhost:27017/viraloop

# Authentication
JWT_SECRET=your-jwt-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS/Wasabi Storage
SES_S3_AWS_ACCESS_KEY_ID=your-aws-access-key
SES_S3_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=viraloop

# AI Services
OPENAI_API_KEY=your-openai-api-key
REPLICATE_API_TOKEN=your-replicate-token
KIE_AI_API_KEY=your-kie-ai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# TikTok OAuth
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Instagram/Facebook OAuth
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# YouTube/Google OAuth
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Stripe (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_API_KEY=your-stripe-publishable-key

# Admin
ADMIN_SECRET_KEY=your-admin-secret-key

# Crisp Chat
NEXT_PUBLIC_CRISP_WEBSITE_ID=your-crisp-website-id
